section
  br
  .modal#mapModal
    .modal-background
    .modal-content
      .container.has-text-centered
        .h3.is-size-3.has-text-link.has-text-weight-bold Click on the markers to see some of the photos I took!
        #map
    button.modal-close.is-large#close-modal

each loc in htmlWebpackPlugin.options.data.multiPic
  div(id=loc.id).modal
    .modal-background
    .modal-content
      .cotainer
        .card
          .content
            header.card-header
              p.card-header-title= loc.desc
            .card-image
              .carousel.carousel-animated.carousel-animate-slide
                .carousel-container
                  for image, index in loc.images
                    div(class=index==1 ? "is-active" : "").carousel-item.has-background
                      figure.image.is-16by9
                        img(src='' data-src=require('../../images/modal/' + image.src + '.jpg'), alt=image.alt).lazy_load.is-background
                .carousel-navigation.is-centered
                  .carousel-nav-left
                    i.icon-angle-circled-left(aria-hidden="true")
                  .carousel-nav-right
                    i.icon-angle-circled-right(aria-hidden="true")
            footer.card-footer
              p.card-footer-item= loc.footer 
    button.modal-close.is-large#close-modal

each loc in htmlWebpackPlugin.options.data.singlePic
  div(id=loc.id).modal
    .modal-background
    .modal-content
      .cotainer
        .card
          .content
            header.card-header
              p.card-header-title= loc.desc
            .card-image
              figure.image.is-16by9
                img(src='' data-src=require('../../images/modal/' + loc.image.src + '.jpg'), alt=loc.image.alt).lazy_load.is-background
            footer.card-footer
              p.card-footer-item= loc.footer 
    button.modal-close.is-large#close-modal